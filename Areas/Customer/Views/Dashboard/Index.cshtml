@using GadgetCompany.ViewModels
@model ProductVM
<br />
<h2 class="text-primary">Gadget Company</h2>
<br />
<form method="post">
    <div class="row">
        <div class="col-6 col-md-3 mb-3">
        </div>
        <div class="col-6 col-md-3 mb-3">
        </div>
        <div class="col-6 col-md-2 mb-3">
            @Html.LabelFor(m => m.Filter.ProductName, new { @class = "form-label" })
        </div>
        <div class="col-6 col-md-2 mb-3">
            @Html.TextBoxFor(m => m.Filter.ProductName, new { @class = "form-control" })
        </div>
        <div class="col-6 col-md-2 mb-3">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<div class="responsive">
    <table class="table table-striped">
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Product Type</th>
            <th></th>
        </tr>
        @foreach(var prod in Model.Products)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Description</td>
                <td>@prod.Price</td>
                <td>@prod.StockQuantity</td>
                <td>@prod.ProductType.Type</td>
                <td><a asp-action="Index" asp-controller="ShoppingCart" asp-route-productId = "@prod.Id" class="btn btn-primary disabled">Add to Cart</a></td>
            </tr>
        }
    </table>

</div>
